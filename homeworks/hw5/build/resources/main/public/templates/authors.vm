#set( $title = "Authors List" )
#parse("public/templates/top.vm")

#if ($authors)
<h1>List of the authors of your favorite books:</h1>
<div class="divContents">
    <ol>
        <p>
            #foreach($author in $authors )
                <li class="content author" ><i>$author.name</i> ($author.nationality) has published $author.numOfBooks books. <button class="$author.name">X</button></li>
            #end
        </p>
    </ol>
</div>

<form action="/addauthor" method="post" class="content">
    <input type="text" name="name" placeholder="name" id="name" required> <input type="text" name="nationality" placeholder="nationality" id="nationality" /> <input type="number" name="numOfBooks" placeholder="1" id="numOfBooks" min="1" max="200"/> <button2 class="$author.name">&#10004</button2>
</form>
#end
<script src="js/delauthor.js"></script>
<script src="js/validate.js"></script>

#parse("public/templates/bottom.vm")